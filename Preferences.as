package {	public class Preferences {		public static var pref;		public function Preferences() {		}		public static function customizePref(p) {			pref = p		}		public static function createPref(ww,hh) {			pref.w = ww;			pref.h = hh;		}		public static function updatePref(cnt) {			var myPath			pref.startUrl = cnt;			if (cnt.indexOf("http://")>-1) {				myPath = cnt.substring(0, cnt.indexOf("/", 7));				pref.myPath = myPath;			} else if (cnt.lastIndexOf("/")>-1) {				myPath = cnt.substring(0, cnt.lastIndexOf("/")+1);				pref.myPath = myPath;			} else {				pref.myPath = "";			}			trace(pref.myPath)			updatePrefPath();		}		public static function updatePrefPath() {			pref.downPath = pref.myPath+Starter.myReplace(pref.downPath, pref.myPath,"");			pref.myViPath = pref.myPath+Starter.myReplace(pref.myViPath, pref.myPath,"");			pref.fpUpPath = pref.myPath+Starter.myReplace(pref.fpUpPath, pref.myPath,"");			pref.embePath = pref.myPath+Starter.myReplace(pref.embePath, pref.myPath,"");		}	}}